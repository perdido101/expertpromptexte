{
  "manifest_version": 3,
  "name": "RolePrompt",
  "description": "Generate expert role prompts for AI chat with one click",
  "version": "1.0.0",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "public/icon16.png",
      "48": "public/icon48.png",
      "128": "public/icon128.png"
    }
  },
  "permissions": ["clipboardWrite"],
  "icons": {
    "16": "public/icon16.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  }
}
